<Window x:Class="Hello_World.Menu.MenuView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hello_World.Menu"
        mc:Ignorable="d"
        AllowsTransparency="True"
        Title="MenuView" Height="450" Width="450">
    <Window.Background>
        <SolidColorBrush Opacity="0.5" Color="white"/>
    </Window.Background>

    <Window.Resources>
        <Style x:Key="MenuButton" TargetType="Button">
            <Setter Property="Background" Value="#c8a8a8a8"/>
            <Setter Property="Foreground" Value="White" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Button Style="{StaticResource MenuButton}" Grid.Row="0"  Content="Resume"></Button>
        <Button Style="{StaticResource MenuButton}" Grid.Row="2"  Content="Save and Exit"></Button>
        <Button Style="{StaticResource MenuButton}" Grid.Row="4"  Content="Quit"></Button>
    </Grid>
</Window>
